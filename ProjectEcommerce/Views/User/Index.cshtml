
@model IEnumerable<ProjectEcommerce.Models.Product>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<form class="col-3 d-flex flex-row gap-2" style="align-items: baseline;"
    asp-area=""
    asp-controller="User"
    asp-action="Index"
    method="get"
>
    <div class="mb-3">
        <input type="text" class="form-control" id="timkiem" name="timkiem" aria-describedby="tim kiem noi dung">
    </div>
    <button type="submit" class="btn btn-primary">Tìm kiếm</button>
</form>
<table class="table table-striped overflow-scroll">
    <thead>
        <tr class="text-center">
            <th scope="col">STT</th>
            <th scope="col">Mô tả</th>
            <th scope="col">Giá</th>
            <th scope="col">Tên sản phẩm</th>
            <th scope="col">Hình ảnh</th>
            @* <th scope="col">Xem chi tiết</th> *@
        </tr>
    </thead>
    <tbody>
        @if (Model != null)
        {
            int i = 0;
            foreach (var item in Model)
            {
                i++;
                <tr>
                    <td class="text-center">@i</td>
                    <td class="text-center">@item.Description</td>
                    <td class="text-center">@item.Price</td>
                    <td class="text-center">@item.ProductName</td>
                    <td class="text-center">
                        <img style="width: 50px; height: 50px;" src="@item.UrlImage" />
                    </td>
                    @* <td class="text-center">
                        <a class="px-2" asp-area="" asp-controller="User" asp-action="Xemchitiet" asp-route-id="@item">
                            <i class="fa fa-laptop" aria-hidden="true"></i>
                        </a>
                    </td> *@
                </tr>
            }
        }
        else
        {
            <caption>
                Không có dữ liệu
            </caption>
        }
    </tbody>
</table>


